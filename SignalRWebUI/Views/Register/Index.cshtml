@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>MyRestoran Kayıt</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/feane-1.0.0/images/Register icin.png" alt="form" style="width:484px; height:584px">
			</div>
			<form class="form-detail" method="post">
				<h2>Yeni Kullanıcı Kaydı</h2>
				
				@if (!ViewData.ModelState.IsValid)
				{
					<div style="color: #c85a54; margin-bottom: 15px; background: #fef5f5; padding: 10px; border-radius: 8px; border-left: 3px solid #c85a54;">
						@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
						{
							<p style="margin: 5px 0;">@error.ErrorMessage</p>
						}
					</div>
				}

				<div class="form-row">
					<input type="text" id="full-name" asp-for="Name" class="input-text" placeholder="Adınız" required>
				</div>
				<div class="form-row">
					<input type="text"id="full-name" class="input-text" placeholder="Soyadınız" required asp-for="Surname">
				</div>
				<div class="form-row">
					<input type="text"id="full-name" class="input-text" placeholder="Kullanıcı Adınız" required asp-for="Username">
				</div>
				<div class="form-row">
					<input type="text" id="your-email" class="input-text" placeholder="Email  Addresiniz" asp-for="Mail" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
				</div>
				<div class="form-row">
					<input type="password" id="password" class="input-text" placeholder="Şifreniz" asp-for="Password" required>
				</div>

				<div class="form-row-last">
					<button type="submit" class="register">Kayıt Ol</button>
				</div>
				<div class="form-row-last" style="margin-top: 15px; text-align: center;">
					<p style="color: #6b5d4f;">Zaten hesabınız var mı? <a href="/Login/Index" style="color: #a08968; font-weight: bold; text-decoration: none;">Giriş Yap</a></p>
				</div>
			</form>
		</div>
	</div>
</body>
</html>