    <script>
        // Kategori Filtreleme
        $(document).ready(function () {
            console.log("Menu/Index filtreleme başlatıldı");
            
            // İlk yüklemede ilk 6 ürünü göster
            $('.grid .col-sm-6').each(function(index) {
                if (index < 6) {
                    $(this).css('display', 'block');
                } else {
                    $(this).hide();
                }
            });
            
            // Kategori butonlarına tıklama olayı
            $('.filters_menu li').click(function () {
                console.log("Kategori butonuna tıklandı");
                
                // Aktif sınıfı değiştir
                $('.filters_menu li').removeClass('active');
                $(this).addClass('active');

                // Filtreleme değerini al
                var filterValue = $(this).attr('data-filter');
                console.log("Seçilen kategori:", filterValue);

                if (filterValue === 'all' || filterValue === 'Tüm Ürünler') {
                    // İlk 6 ürünü göster
                    console.log("İlk 6 ürün gösteriliyor");
                    $('.grid .col-sm-6').each(function(index) {
                        if (index < 6) {
                            $(this).fadeIn(400);
                        } else {
                            $(this).fadeOut(400);
                        }
                    });
                } else {
                    // Tüm ürünleri gizle
                    $('.grid .col-sm-6').fadeOut(400);
                    
                    // Sadece seçilen kategorideki ürünleri göster
                    setTimeout(function() {
                        $('.grid .col-sm-6.' + filterValue).fadeIn(400);
                        console.log("Kategori filtrelendi:", filterValue);
                    }, 400);
                }
            });
        });

        function showproductid(productId, menuTableId) {
            $.ajax({
                type: 'POST',
                url: "/Menu/AddBasket",
                data: {
                    id: productId,
                    menuTableId: menuTableId
                },
                success: function () {
                    swal({
                        title: "Başarılı!",
                        text: "Seçtiğiniz ürün sepete eklendi!",
                        icon: "success",
                        button: "Tamam",
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Hata:", error);
                    console.log("Yanıt:", xhr.responseText);
                    swal({
                        title: "Hata!",
                        text: "Ürün sepete eklenirken bir hata oluştu.",
                        icon: "error",
                        button: "Tamam",
                    });
                }
            });
        };
    </script>
