@model List<ResultContactDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Ýletiþim Bilgi Ýþlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Ýletiþim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
                            Ýletiþim alanýyla ilgili iþlemleri yapabilirsiniz.<strong> Tema bütünlüðü için sadece 1 tane iletiþim alaný oluþturmayý unutmayýn.</strong>
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Açýklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.FooterDescription</td>
										<td><a href="/Admin/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Admin/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Admin/Contact/CreateContact/" class="btn btn-outline-primary">Yeni Ýletiþim Yazýsý Giriþi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>