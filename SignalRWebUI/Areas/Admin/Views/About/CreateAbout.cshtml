@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkýmýzda Ýþlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkýmýzda Yazý Giriþi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Baþlýðý Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title" required>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Görsel Url'ini Giriniz (Manuel)</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" placeholder="/images/resimadi.png">
                                <small class="form-text text-muted">Örnek: /images/HakkimizdaBolumu.png</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="imagefile">VEYA Bilgisayardan Görsel Yükle</label>
                                <input type="file" class="form-control-file border p-2" name="imageFile" id="imagefile" accept="image/*">
                                <small class="form-text text-success">Bilgisayarýnýzdan dosya seçebilirsiniz</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Açýklamayý Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="Description" required></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fa fa-save"></i> Hakkýmda Yazýsýný Ekle
                            </button>
                            <a href="/Admin/About/Index" class="btn btn-danger">Ýptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
